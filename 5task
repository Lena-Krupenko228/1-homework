#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "RU");
    int a;

    cout << "Введите число: ";
    cin >> a;

    if ( a % 3 == 0 && a % 5 == 0) {
        cout << "Число делится на 3 и на 5 " << endl;
    }
    else if ( a % 3 == 0) {
        cout << "Число делится на 3." << endl;
    }
    else if ( a % 5 == 0) {
        cout << "Число делится на 5." << endl;
    }
    else {
        cout << "Число не делится ни на 3, ни на 5." << endl;
    }
    return 0;
}
